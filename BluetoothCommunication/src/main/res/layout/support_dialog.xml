<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingLeft="25dp"
    android:paddingTop="50dp"
    android:paddingRight="25dp"
    android:paddingBottom="50dp">

    <TextView
        android:id="@+id/tv_support_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:lineSpacingExtra="5dp"
        android:textAlignment="center"
        android:textColor="#888"
        android:text="@string/sponsor_message"
        android:textSize="17sp" />

    <Button
        android:id="@+id/bt_sponsor_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_support_message"
        android:layout_marginTop="25dp"
        android:background="@drawable/shape_dialog_button"
        android:text="@string/go_sponsor"
        android:textColor="@android:color/white"
        android:textSize="15sp" />

    <Button
        android:id="@+id/bt_close_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_sponsor_button"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_dialog_inactive_button"
        android:text="@string/close"
        android:textColor="#777"
        android:textSize="15sp" />

</RelativeLayout>